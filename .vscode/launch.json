{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Ejecutar MVC (.NET 9)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/ProyectoPrueba/bin/Debug/net9.0/ProyectoPrueba.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/ProyectoPrueba",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/src/ProyectoPrueba/Views"
      }
    }
  ]
}
